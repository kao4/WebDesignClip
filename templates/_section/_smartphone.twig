<section id="section-smartphone" class="tab-content active section-content">
    {% set smartphoneEntries = craft.entries()
        .section('smartphone')
        .type('entryContent')
        .limit(12)
        .all() %}

    {# 1ページ目 #}
    <div class="section-content__grid">
        {% for entry in smartphoneEntries %}
            {% if loop.index0 < 6 %}
                {% include "components/entry-card.twig" with { entry: entry } %}
            {% endif %}
        {% endfor %}
    </div>

    {# 2ページ目 #}
    <div class="section-content__grid">
        {% for entry in smartphoneEntries %}
            {% if loop.index0 >= 6 and loop.index0 < 12 %}
                {% include "components/entry-card.twig" with { entry: entry } %}
            {% endif %}
        {% endfor %}
    </div>
</section>